<p id="notice"><%= notice %></p>

<h1>Prayers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Phonenumber</th>
      <th>Email</th>
      <th>Firstname</th>
      <th>Surname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prayers.each do |prayer| %>
      <tr>
        <td><%= prayer.user_id %></td>
        <td><%= prayer.description %></td>
        <td><%= prayer.phoneNumber %></td>
        <td><%= prayer.email %></td>
        <td><%= prayer.firstName %></td>
        <td><%= prayer.surname %></td>
        <td><%= link_to 'Show', prayer %></td>
        <td><%= link_to 'Edit', edit_prayer_path(prayer) %></td>
        <td><%= link_to 'Destroy', prayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

